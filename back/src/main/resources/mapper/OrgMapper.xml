<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zd.back.organization.OrgMapper">

    <select id="maxNum" resultType="int">
        SELECT NVL(MAX(Org_id), 0) FROM organization
    </select>

    <select id="selectAll" resultType="com.zd.back.organization.OrgList">
        Select * from organization
    </select>

    <insert id="insertOrg" parameterType="com.zd.back.organization.OrgList">
        INSERT INTO organization (Org_id, location, name, description, link)
        Values (#{Org_id}, #{location}, #{name}, #{description}, #{link})
    </insert>

</mapper>